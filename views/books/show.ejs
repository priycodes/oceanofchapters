<% layout("/layouts/boilerplate") -%>

<div class="container my-5">
    <!-- Image Section -->
    <div class="row align-items-start mb-5">
        <div class="col-md-4 text-center">
            <img src="<%= book.image %>" class="img-fluid book-hero-img" alt="book image">
        </div>
        <!-- Book Info -->
         <div class="col-md-8">
            <h1 class="mb-2"><%= book.title %></h1>
            <h5 class="text-muted mb-3">by <%= book.author %></h5>
            <h4 class="text-success mb-3">
                &#8377;<%= book.price.toLocaleString("en-IN") %>
            </h4>
            <p class="book-description mb-4">
                <%= book.description %>
            </p>
            <form action="/cart/add/<%= book._id %>" method="POST">
                <button class="btn btn-lg btn-primary px-5">
                    Add to Cart
                </button>
            </form>
         </div>
    </div>
    <!-- Details Section -->
     <div class="row mb-5">
        <div class="col ms-5">
            <h4>Book Details</h4>
            <ul class="list-unstyled book-meta">
                <li><strong>Genre:</strong><%= book.genre %></li>
                <li><strong>Pages:</strong> <%= book.pages %></li>
                <li><strong>Country:</strong> <%= book.country %></li>
                <li><strong>Release Date:</strong>
                <%= book.releasedate.toLocaleDateString("en-IN", {
                    day: "numeric",
                    month: "long",
                    year: "numeric"
                }) %>
                </li>
            </ul>
        </div>
     </div>
     <!-- Author Section -->
      <div class="row align-items-center author-section">
        <div class="col-md-2 text-center">
        <img src="<%= book.authorImage %>"
           class="author-img"
           alt="author">
    </div>
    <div class="col-md-10">
      <h5><%= book.author %></h5>
      <p class="text-muted">
        <%= book.authorBio || "Author bio coming soon." %>
      </p>
    </div>
    </div>
    <hr>
    <div class="col-13">
        <h4>Leave a Review</h4>
        <form action="/books/<%= book._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="1" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <h4>All Reviews</h4>
        <ul>
        <% for(review of book.reviews) { %>
            <div class="review-card">
            <div class="review-card-body">
                <h5 class="review-title">Jane Doe</h5>
                <p class="review-text"><%= review.comment %></p>
                <p class="review-text"><%= review.rating %> stars</p>
                <form class="mb-3" method="POST" action="/books/<%- book._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
            </div>
            <% } %>    
        </ul>
    </div>
</div>

    